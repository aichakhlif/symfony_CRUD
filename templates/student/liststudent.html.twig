<div class="container pt-2 text-center">

    <h1>liste des student</h1>


<br><br>
<table border="1" class="table">
    <tr>

        <td>id</td>
        <td>nsc</td>
        <td>email</td>
        <td>action</td>
        <td>action</td>

    </tr>
    {% for student in student %}
        <tr>
            <td>{{ student.id }}</td>
            <td>{{ student.nsc}}</td>
            <td>{{ student.email}}</td>

            <td><a class="btn btn-success" href="{{ path("editstudent",{"id":student.id}) }}">edit</a>

            <td> <form method="post" action="{{ path ('dropstudent', {'id' : student.id})}}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-success">remove</button>
                </form>
            </td>

        </tr>
    {% endfor %}

</table>

</div>
